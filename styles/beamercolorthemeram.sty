\mode<presentation>

\definecolor{ramsgold}{RGB}{248,184,0}
\definecolor{ramsblack}{RGB}{0,0,0}

\setbeamercolor{structure}{fg=ramsblack}

\setbeamercolor{palette primary}{fg=ramsblack,bg=ramsgold!70}
\setbeamercolor{palette secondary}{fg=ramsblack,bg=ramsgold!80}
\setbeamercolor{palette tertiary}{fg=ramsblack,bg=ramsgold!90}
\setbeamercolor{palette quaternary}{fg=ramsblack,bg=ramsgold}

\setbeamercolor{titlelike}{parent=palette quaternary}

\setbeamercolor{block title}{fg=ramsblack,bg=ramsgold}
\setbeamercolor{block title alerted}{use=alerted text,fg=ramsblack,bg=alerted text.fg!75!bg}
\setbeamercolor{block title example}{use=example text,fg=ramsblack,bg=example text.fg!75!bg}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!25!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!25!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!25!bg}

\setbeamercolor{sidebar}{bg=ramsgold!70}
  
\setbeamercolor{palette sidebar primary}{fg=ramsblack}
\setbeamercolor{palette sidebar secondary}{fg=ramsblack!75}
\setbeamercolor{palette sidebar tertiary}{fg=ramsblack!75}
\setbeamercolor{palette sidebar quaternary}{fg=ramsblack}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
